<core:FragmentDefinition xmlns:cards="sap.f.cards" xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core">
    <Dialog binding="{/detail}" title="Pay Summary (~~~~~~~~~~~~~~~~~~ing)" contentWidth="1400px" > 
        <content>
             <Panel>
              <headerToolbar>
                    <Toolbar>
                        <Title text="Print"/>
                        <ToolbarSpacer/>
                        <Button icon="sap-icon://print"/>
                        </Toolbar>
                </headerToolbar>
                <content>
                    <VBox binding="{/sample}">
                        <grid:CSSGrid
                            id="grid0"
                            class="grid-form"
                            gridAutoFlow="Column"
                            gridTemplateColumns="repeat(6, minmax(30px,1fr))"
                            gridTemplateRows="repeat(1, 5rem)"
                            gridAutoRows="2rem"
                            gridGap="1rem 0.5rem">
                            <VBox class="grid-item contents-box">
                                <layoutData>
                                    <grid:GridItemLayoutData gridRow = "1 / 2" />
                                </layoutData>
                                <Text text="One (2 rows, 1 column)" wrapping="true" />
                            </VBox>         
                        </grid:CSSGrid>
                        <grid:CSSGrid
                            id="grid1"
                            class="grid-form"
                            gridAutoFlow="Column"
                            gridTemplateColumns="repeat(6, minmax(30px,1fr))"
                            gridTemplateRows="repeat(1, 5rem)"
                            gridAutoRows="2rem"
                            gridGap="1rem 0.5rem">
                            <VBox class="grid-item contents-box">
                                <layoutData>
                                    <grid:GridItemLayoutData gridRow = "1 / 3" />
                                </layoutData>
                                <Text text="One (2 rows, 1 column)" wrapping="true" />
                            </VBox>
                            <VBox class="grid-item contents-box">
                                <Text text="Two" wrapping="true" />
                            </VBox>
                            <VBox class="grid-item contents-box">
                                <Text text="Three" wrapping="true" />
                            </VBox>
                            <VBox class="grid-item contents-box">
                                <layoutData>
                                    <grid:GridItemLayoutData gridColumn = "3 / 5" />
                                </layoutData>
                                <Text text="Four (1 row, 2 columns)" wrapping="true" />
                            </VBox>
                            <VBox class="grid-item contents-box">
                                <Text text="Five" wrapping="true" />
                            </VBox>
                            <VBox class="grid-item contents-box">
                                <Text text="Six" wrapping="true" />
                            </VBox>
                            <VBox class="grid-item contents-box">
                                <Text text="Seven" wrapping="true" />
                            </VBox>
                            <VBox class="grid-item contents-box">
                                <Text text="Eight" wrapping="true" />
                            </VBox>
                            <VBox class="grid-item contents-box">
                                <Text text="Nine" wrapping="true" />
                            </VBox>
                            <VBox class="grid-item contents-box">
                                <Text text="Ten" wrapping="true" />
                            </VBox>
                        </grid:CSSGrid>
                        <grid:CSSGrid class="grid-form" gridTemplateColumns="1fr 1fr 1fr" gridGap="1px 0px">
                            <HBox class="grid-item label-box last" alignItems="Center">
                                <layoutData>
                                    <grid:GridItemLayoutData gridColumn="span 3" gridRow = "1 / 3" />
                                </layoutData>
                                <Label text="Select Transaction Date Range" />
                            </HBox>
                            <HBox class="grid-item contents-box" alignItems="Center">
                                <Text text="Start Date : " />
                                <DatePicker dateValue="{Begda}" displayFormat="yyyy-MM-dd" class="sapUiTinyMarginBegin" />
                            </HBox>
                            <HBox class="grid-item contents-box" alignItems="Center">
                                <Text text="End Date : " />
                                <DatePicker dateValue="{Endda}" displayFormat="yyyy-MM-dd" class="sapUiTinyMarginBegin" />
                            </HBox>
                            <HBox class="grid-item contents-box last" alignItems="Center">
                                <Button text="Refresh" />
                            </HBox>
                        </grid:CSSGrid>
                        <grid:CSSGrid class="grid-form" gridTemplateColumns="1fr 1fr 1fr" gridGap="1px 0px">
                            <HBox class="grid-item label-box last" alignItems="Center">
                                <layoutData>
                                    <grid:GridItemLayoutData gridColumn="span 3" />
                                </layoutData>
                                <Label text="Select Transaction Date Range" />
                            </HBox>
                            <HBox class="grid-item contents-box" alignItems="Center">
                                <Text text="Start Date : " />
                                <DatePicker dateValue="{Begda}" displayFormat="yyyy-MM-dd" class="sapUiTinyMarginBegin" />
                            </HBox>
                            <HBox class="grid-item contents-box" alignItems="Center">
                                <Text text="End Date : " />
                                <DatePicker dateValue="{Endda}" displayFormat="yyyy-MM-dd" class="sapUiTinyMarginBegin" />
                            </HBox>
                            <HBox class="grid-item contents-box last" alignItems="Center">
                                <Button text="Refresh" />
                            </HBox>
                        </grid:CSSGrid>
                        <grid:CSSGrid class="grid-form sapUiLargeMarginTop" gridTemplateColumns="2fr 2fr 2fr 1fr" gridGap="1px 0px">
                            <HBox class="grid-item label-box" alignItems="Center">
                                <Label text="Badge No" />
                            </HBox>
                            <HBox class="grid-item contents-box" alignItems="Center">
                                <Text text="{Badge}" />
                            </HBox>
                            <HBox class="grid-item label-box" />
                            <HBox class="grid-item contents-box last" />
                            <HBox class="grid-item label-box" alignItems="Center">
                                <Label text="Number of Charges" />
                            </HBox>
                            <HBox class="grid-item contents-box" alignItems="Center">
                                <Text text="{ChargesN}" />
                            </HBox>
                            <HBox class="grid-item label-box" alignItems="Center">
                                <Label text="Total Charges" />
                            </HBox>
                            <HBox class="grid-item contents-box last" alignItems="Center">
                                <Text text="{ parts: ['ChargesT', '/Currency'], type: 'sap.ui.model.type.Currency', formatOptions: {currencyCode:false} }" />
                            </HBox>
                            <HBox class="grid-item label-box" alignItems="Center">
                                <Label text="Number of Payments" />
                            </HBox>
                            <HBox class="grid-item contents-box" alignItems="Center">
                                <Text text="{PaymentsN}" />
                            </HBox>
                            <HBox class="grid-item label-box" alignItems="Center">
                                <Label text="Total Payments" />
                            </HBox>
                            <HBox class="grid-item contents-box last" alignItems="Center">
                                <Text text="{ parts: ['PaymentsT', '/Currency'], type: 'sap.ui.model.type.Currency', formatOptions: {currencyCode:false} }" />
                            </HBox>
                            <HBox class="grid-item label-box" alignItems="Center">
                                <Label text="Date Range" />
                            </HBox>
                            <HBox class="grid-item contents-box" alignItems="Center">
                                <Text text="{ path: 'DatumS', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'MM/dd/yyyy' } } ~ { path: 'DatumE', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'MM/dd/yyyy' } }" />
                            </HBox>
                            <HBox class="grid-item label-box" alignItems="Center">
                                <Label text="Transaction Balance" />
                            </HBox>
                            <HBox class="grid-item contents-box last" alignItems="Center">
                                <Text text="{ parts: ['Balance', '/Currency'], type: 'sap.ui.model.type.Currency', formatOptions: {currencyCode:false} }" />
                            </HBox>
                        </grid:CSSGrid>

                        <grid:CSSGrid class="grid-form sapUiLargeMarginTop" gridTemplateColumns="2fr 2fr 2fr 1fr" gridGap="1px 0px">
                            <HBox class="grid-item label-box" alignItems="Center">
                                <Label text="Badge No" />
                            </HBox>
                            <HBox class="grid-item contents-box" alignItems="Center">
                                <Text text="{Badge}" />
                            </HBox>
                            <HBox class="grid-item label-box" />
                            <HBox class="grid-item contents-box last" />
                            <HBox class="grid-item label-box" alignItems="Center">
                                <Label text="Number of Charges" />
                            </HBox>
                            <HBox class="grid-item contents-box" alignItems="Center">
                                <Text text="{ChargesN}" />
                            </HBox>
                            <HBox class="grid-item label-box" alignItems="Center">
                                <Label text="Total Charges" />
                            </HBox>
                            <HBox class="grid-item contents-box last" alignItems="Center">
                                <Text text="{ parts: ['ChargesT', '/Currency'], type: 'sap.ui.model.type.Currency', formatOptions: {currencyCode:false} }" />
                            </HBox>
                            <HBox class="grid-item label-box" alignItems="Center">
                                <Label text="Number of Payments" />
                            </HBox>
                            <HBox class="grid-item contents-box" alignItems="Center">
                                <Text text="{PaymentsN}" />
                            </HBox>
                            <HBox class="grid-item label-box" alignItems="Center">
                                <Label text="Total Payments" />
                            </HBox>
                            <HBox class="grid-item contents-box last" alignItems="Center">
                                <Text text="{ parts: ['PaymentsT', '/Currency'], type: 'sap.ui.model.type.Currency', formatOptions: {currencyCode:false} }" />
                            </HBox>
                            <HBox class="grid-item label-box" alignItems="Center">
                                <Label text="Date Range" />
                            </HBox>
                            <HBox class="grid-item contents-box" alignItems="Center">
                                <Text text="{ path: 'DatumS', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'MM/dd/yyyy' } } ~ { path: 'DatumE', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'MM/dd/yyyy' } }" />
                            </HBox>
                            <HBox class="grid-item label-box" alignItems="Center">
                                <Label text="Transaction Balance" />
                            </HBox>
                            <HBox class="grid-item contents-box last" alignItems="Center">
                                <Text text="{ parts: ['Balance', '/Currency'], type: 'sap.ui.model.type.Currency', formatOptions: {currencyCode:false} }" />
                            </HBox>
                        </grid:CSSGrid>
                    </VBox>
                </content>
         </Panel>
        </content>
        <buttons>
            <Button text="{i18n>closeButton}" press=".onPressCloseDialog" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>